<script>
  document.addEventListener("DOMContentLoaded", function () {
    gsap.registerPlugin(ScrollTrigger);

    const box1Elements = document.querySelectorAll(".box1");

    box1Elements.forEach((element, index) => {
      const greenElement = element.querySelector(".green");
      gsap.to(greenElement, {
        top: "40%",
        backgroundColor: "#0047ab", 
        borderRadius: "100%",
        duration: 2,
        scrollTrigger: {
          trigger: element,
          start: "20px center",
          end: "center bottom",
          // markers:true,
          scrub: 2,
        },
      });

      const mm = gsap.matchMedia();

      mm.add("(max-width: 375px)", () => {
        gsap.to(greenElement, {
          width: "250px",
          height: "250px",
          top: "40%",
          backgroundColor: "#0047ab",
          duration: 2,
          borderRadius: "100%",
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });

      mm.add("(max-width: 425px)", () => {
        gsap.to(greenElement, {
          width: "260px",
          height: "260px",
          top: "40%",
          backgroundColor: "#0047ab",
          duration: 2,
          borderRadius: "100%",
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });
      mm.add("(min-width: 426px)", () => {
        gsap.to(greenElement, {
          width: "350px",
          height: "350px",
          top: "40%",
          backgroundColor: "#0047ab",
          duration: 2,
          borderRadius: "100%",
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });

      mm.add("(min-width: 769px)", () => {
        gsap.to(greenElement, {
          width: "400px",
          height: "400px",
          top: "40%",
          backgroundColor: "#0047ab",
          duration: 2,
          borderRadius: "100%",
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });

      //---- Add text color change animation to each box -----//
      const textElements = document.querySelectorAll(".digitize, .reports");

      textElements.forEach((element) => {
        gsap.to(element, {
          color: "black",
          scrollTrigger: {
            trigger: element.closest(".box1"),
            start: "20px center",
            end: "center bottom",
            scrub: 1,
          },
        });
      });
    });

    //--------------------------box2 animation start---------------------------//

    const box2Elements = document.querySelectorAll(".box2");

    box2Elements.forEach((element, index) => {
      const blueElement = element.querySelector(".bluee");
      gsap.to(blueElement, {
        width: "100%",
        // height: "940px",

        top: "40%",
        backgroundColor: "#0047ab",
        borderRadius: "0%",
        duration: 2,
        scrollTrigger: {
          trigger: element,
          start: "20px center",
          end: "center bottom",
          scrub: 2,
        },
      });

      const mm = gsap.matchMedia();

      mm.add("(max-width: 375px)", () => {
        gsap.to(blueElement, {
          width: "100%",
          height: "640px",
          top: "40%",
          backgroundColor: "#0047ab",
          borderRadius: "0%",
          duration: 2,
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });

      mm.add("(max-width: 425px)", () => {
        gsap.to(blueElement, {
          width: "100%",
          height: "640px",
          top: "40%",
          backgroundColor: "#0047ab",
          borderRadius: "0%",
          duration: 2,
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });
      mm.add("(min-width: 426px)", () => {
        gsap.to(blueElement, {
          width: "100%",
          height: "850px",
          top: "40%",
          backgroundColor: "#0047ab",
          borderRadius: "0%",
          duration: 2,
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });

      mm.add("(min-width: 769px)", () => {
        gsap.to(blueElement, {
          width: "100%",
          height: "940px",
          top: "40%",
          backgroundColor: "#0047ab",
          borderRadius: "0%",
          duration: 2,
          scrollTrigger: {
            trigger: element,
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });

      const textElements = document.querySelectorAll(".digitall, .repoeter");

      textElements.forEach((element) => {
        gsap.to(element, {
          color: "white",
          scrollTrigger: {
            trigger: element.closest(".box2"),
            start: "20px center",
            end: "center bottom",
            scrub: 2,
          },
        });
      });
    });
    //--------------------------box2 animation end---------------------------//

    // --------------drop button animation start------------------//

    const buttonf = gsap.timeline({
      scrollTrigger: {
        trigger: ".butt",
        start: "center center",
        endTrigger: ".portfolio",
        end: "center center",
        scrub: 1,
        pin: true,
        // markers: true,
      },
    });

    buttonf.to(".butt", {
      duration: 1,
      ease: "bounce.out",
      xPercent: 8,
      rotate: 12,
    });
  });

  // --------------drop button animation end------------------//
</script> 