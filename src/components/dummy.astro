<script>
 document.addEventListener("DOMContentLoaded", function () {
    gsap.registerPlugin(ScrollTrigger);

    const box1Elements = document.querySelectorAll(".box1");

box1Elements.forEach((element, index) => {
  gsap.to(element.querySelector(".green"), {
    minWidth: "400px",
    minHeight: "400px",
    top: "40%",
    backgroundColor: "#0047ab",
    borderRadius: "100%",
    duration: 2,
    scrollTrigger: {
      trigger: element,
      start: "20px center",
      end: "center bottom",
      // markers:true,
      scrub: 1,
    },
  });

  //---- Add text color change animation to each box -----//
  const textElements = document.querySelectorAll(".digitize, .reports");

textElements.forEach((element) => {
  gsap.to(element, {
    color: "black",
    scrollTrigger: {
      trigger: element.closest(".box1"), 
      start: "20px center",
      end: "center bottom", 
      scrub: 1,
    },
  });
});

});

//---------------box2 animation--------------//

const box2Elements = document.querySelectorAll(".box2");

box2Elements.forEach((element, index) => {
  gsap.to(element.querySelector(".bluee"), {
    minWidth: "100%",
    minHeight: "940px",
 
    top: "40%",
    backgroundColor: "#0047ab",
    borderRadius: "0%",
    duration: 2,
    scrollTrigger: {
      trigger: element,
      start: "20px center",
      end: "center bottom",
     
      scrub: 1,
    },
  });

  
  const textElements = document.querySelectorAll(".digitall, .repoeter");

textElements.forEach((element) => {
  gsap.to(element, {
    color: "white",
    scrollTrigger: {
      trigger: element.closest(".box2"), 
      start: "20px center",
      end: "center bottom", 
      scrub: 1,
    },
  });
});

});


  const buttonfTimeline = gsap.timeline({
  scrollTrigger: {
    trigger: ".butt",
    start: "center center", 
    end: "center ", 
    scrub: 4,        
    pin: true,
    // markers: true,      
    
  },
});

buttonfTimeline.to(".butt", {
  yPercent: 900, 
  duration: 4,   
  rotate: 18,
  xPercent: 10,
  ease: "bounce.out",

});

    var frame_count =0,
        offset_value = 100;

    gsap.to(".contain", {
        backgroundPosition: (-offset_value * frame_count * 2) + "px 50%",
        ease: "steps(" + frame_count + ")",
        scrollTrigger: {
            trigger: ".scene",
            start: "top top",
            end: "+=" + (frame_count * offset_value),
            pin: true,
            scrub: true,
        },
    });
});
 
</script>
