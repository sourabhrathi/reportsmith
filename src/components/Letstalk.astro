---
import logo from "../images/talk1.png";
import logo1 from "../images/talk2.png";
import "../styles/global.css";
---

<section class="lesttalk">
    <div class="container mx-auto">
        <div class="sm:py-10 py-6">
        <div class="flex flex-row">
            <div class="w-full">
                <h2 class="talkhaed">Letâ€™s Talk</h2>
            </div>
        </div>
        <div class="flex flex-row justify-center align-middle lets">
            <div class="columns-1  md:w-10/12 sm:w-11/12 talkform letstalkform">
                <div class="talkimgwidth talkimg"><img src={logo.src} alt=""  /></div>
                
                <form action="" class="">
                    <div class="higher">
                        <span class="talksdesc">Hello! My name is</span>
                        <input type="text" name="" id="" class="talkinput" />
                        <span class="talksdesc"
                            >and I want to discuss a potential project.</span
                        >
                    </div>
                    <div class="pt-2 sm:pt-3 higher">
                        <span class="talksdesc">You can email me at</span>
                        <input type="text" name="" id="" class="talkinput" />
                        <span class="talksdesc">& reach me on</span>
                        <input
                            type="text"
                            name=""
                            id=""
                            class="talkinput"
                        />.
                    </div>
                    <div class="pt-2 sm:pt-3 higher">
                        <p class="talksdesc">
                            Here are some details about my project:
                        </p>
                        <!-- <textarea
                            name="message"
                            placeholder="Message"
                            rows="4"
                            class="w-full mb-2 px-4 py-2 mt-2 outline-none border"
                            required=""></textarea> -->
                        <input
                            type="text"
                            name=""
                            id=""
                            class="outline-none w-full talktexarea"
                        />
                    </div>
                    <div class="pt-2 sm:pt-3 higher">
                        <p class="talksdesc">
                            I'm interested in (select one or more):
                        </p>
                        <div class="pt-3">
                            <button class="talkbtns">Category</button>
                            <button class="talkbtns">Category</button>
                            <button class="talkbtns">Category</button>
                            <button class="talkbtns">Category</button>
                        </div>
                    </div>
                    <div class="flex justify-center align-middle bottombtn pt-20">
                        <button class="talkbtn">Submit Request</button>
                    </div>
                </form>
                <div class="talkimgwidth talkimg2">
                <img src={logo1.src} alt=""  />
                </div>
            </div>
        </div>
    </div>
</div>
</section>

<style>
    .lets{
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .lesttalk {
        background: #0047ab;
    }

    .talkhaed {
        font-family: 'DM Serif Display';
        font-size: 64px;
        font-weight: 400;
        line-height: 88px;
        letter-spacing: 0em;
        text-align: center;
        color: #fcf4ed;
    }

    .talkform {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
    }

    .talksdesc {
        font-family: 'Open Sans';
        font-size: 20px;
        font-weight: 400;
        line-height: 27px;
        letter-spacing: 0em;
        text-align: left;
    }

    .talkinput {
        border-bottom: 1px solid #000;
        outline: none;
    }

    .talktexarea {
        border-bottom: 1px solid #000;
    }

    .talkbtns {
        font-family: 'Open Sans';
        border: 1px solid #000;
        padding: 10px 18px;
        border-radius: 5px;
        margin-right: 10px;
       
    }

    .talkbtn {
        font-family: 'Open Sans';
        border: 1px solid #000;
        padding: 10px 18px;
        border-radius: 5px;
        background: #0047ab;
        color: #fff;
    }

    .letstalkform {
        position: relative;
    }

    .talkimg {
        position: absolute;
        bottom: 0;
        left: -106px;
        right: 0;
    }

    .talkimg2 {
        position: absolute;
        right: -94px;
        bottom: 0;
    }

    .talkimgwidth{
        width: 180px;
    }


