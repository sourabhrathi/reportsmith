---
import Ellipse from "../images/Ellipse.png";
import team from "../images/team.png";

import "../styles/global.css";
---

<section class="bringreport">
    <div class="container mx-auto">
        <div class="ellipse">
            <div class="flex justify-center ellips-img">
                <img src={Ellipse.src} alt="" />
            </div>
            <div class="flex justify-center">
                <h1 class="bringhead">Meet the Team</h1>
            </div>
        </div>

        <div class="flex justify-center">
            <div class="columns-1 imgwidth">
                <img src={team.src} alt="" />
            </div>
        </div>
    </div>
</section>

<style>
    .ellipse {
        padding: 68px 0px;
        position: relative;
    }

    .ellips-img {
        margin-right: 430px;
    }
    .bringreport {
        background: #fcf4ed;
        /* height: calc(100vh - 80px); */
    }
    .content {
        padding: 0px 12px;
        width: 370px;
        color: #f5f5f5;
        font-family: "Open Sans";
        font-size: 16px;
        font-weight: 400;
        line-height: 26px; /* 162.5% */
    }
    .bringhead {
        font-family: "DM Serif Display";
        font-size: 64px;
        font-weight: 400;
        line-height: 88px;
        letter-spacing: 0em;
        text-align: center;
        position: absolute;
        top: 104px;
        /* margin-top: 80px; */
    }
    @media screen and (max-width: 1200px) {
        .bringhead {
            font-size: 58px;
        }
        .ellips-img {
            margin-right: 403px;
        }
    }

    @media screen and (max-width: 1024px) {
        .ellips-img {
            margin-right: 330px;
        }
        .bringhead {
            font-size: 48px;
            top: 86px;
        }
        .ellips-img img {
            width: 70px;
        }
    }
    @media screen and (max-width: 550px) {
        .ellips-img {
            margin-right: 283px;
        }
        .bringhead {
            font-size: 40px;
            top: 76px;
        }
        .ellips-img img {
            width: 60px;
        }
    }
    @media screen and (max-width: 425px) {
        .ellips-img {
            margin-right: 245px;
        }
        .bringhead {
            font-size: 35px;
            top: 58px;
        }
        .ellips-img img {
            width: 50px;
        }
        .ellipse {
            padding: 55px 0px;
        }
        .imgwidth img{
            width: 320px;
        }
    }
</style>
